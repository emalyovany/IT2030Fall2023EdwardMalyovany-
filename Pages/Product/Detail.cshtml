@page "{productId:int}"
@model EdsHikeStore.Pages.Product.DetailModel

@{
    Layout = null; // If you have a layout, specify it here
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Product.ProductName - Product Detail</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

<div class="container mt-4">
    <h1 class="text-primary">@Model.Product.ProductName - Product Detail</h1>
    <div class="row mb-4">
        <div class="col-md-6">
            <img src="@Model.Product.ProductImage" alt="Image of @Model.Product.ProductName" class="img-fluid rounded mb-3" />
        </div>
        <div class="col-md-6">
            <h3 class="text-secondary">@Model.Product.ProductName</h3>
            <p>@Model.Product.ProductDescription</p>
            <p>@Model.Product.ProductPrice.ToString("C")</p>
            <a asp-page="/Product/ListProducts" class="btn btn-primary">Back to Products</a>
        </div>
    </div>
</div>

<script src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
